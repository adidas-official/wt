{% extends 'base.html.twig' %}

{% block title %}Incidenty index{% endblock %}

{% block body %}
    <h1>Incidenty index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Nahlasovatel</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for incidenty in incidenties %}
            <tr>
                <td>{{ incidenty.id }}</td>
                <td>{{ incidenty.url }}</td>
                <td>{{ incidenty.nahlasovatel }}</td>
                <td>{{ incidenty.active }}</td>
                <td>
                    <a href="{{ path('app_incidenty_show', {'id': incidenty.id}) }}">show</a>
                    <a href="{{ path('app_incidenty_edit', {'id': incidenty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_incidenty_new') }}">Create new</a>
{% endblock %}
