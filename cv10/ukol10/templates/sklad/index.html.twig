{% extends 'base.html.twig' %}

{% block title %}Sklad{% endblock %}

{% block body %}
    <h1 class="my-4">Sklad</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">{{ 'labels.title'|trans}}</th>
                <th scope="col">{{ 'labels.quantity'|trans }}</th>
                <th scope="col">{{ 'labels.price'|trans }}</th>
                <th scope="col">{{ 'labels.created_at'|trans }}</th>
                <th scope="col">{{ 'labels.updated_at'|trans }}</th>
                <th scope="col">{{ 'labels.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for sklad in sklads %}
            <tr>
                <td>{{ sklad.id }}</td>
                <td>{{ sklad.title}}</td>
                <td>{{ sklad.quantity }}</td>
                <td>{{ sklad.price }}</td>
                <td>{{ sklad.createdAt ? sklad.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sklad.updatedAt ? sklad.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_sklad_show', {'id': sklad.id}) }}" class="btn btn-info btn-sm">{{ 'labels.show'|trans }}</a>
                    <a href="{{ path('app_sklad_edit', {'id': sklad.id}) }}" class="btn btn-warning btn-sm">{{ 'labels.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sklad_new') }}" class="btn btn-success">{{ 'labels.create_new'|trans }}</a>
{% endblock %}
