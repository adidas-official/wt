{% extends 'base.html.twig' %}

{% block title %}Sklad{% endblock %}

{% block body %}
    <h1>Sklad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sklad.id }}</td>
            </tr>
            <tr>
                <th>{{ 'labels.title'|trans }}</th>
                <td>{{ sklad.title }}</td>
            </tr>
            <tr>
                <th>{{ 'labels.quantity'|trans }}</th>
                <td>{{ sklad.quantity }}</td>
            </tr>
            <tr>
                <th>{{ 'labels.price'|trans }}</th>
                <td>{{ sklad.price }}</td>
            </tr>
            <tr>
                <th>{{ 'labels.category'|trans }}</th>
                <td>{{ sklad.category }}</td>
            </tr>
            <tr>
                <th>{{ 'labels.created_at'|trans }}</th>
                <td>{{ sklad.createdAt ? sklad.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'labels.updated_at'|trans }}</th>
                <td>{{ sklad.updatedAt ? sklad.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sklad_index') }}">{{ 'labels.back_to_idx'|trans }}</a>

    <a href="{{ path('app_sklad_edit', {'id': sklad.id}) }}">{{ 'labels.edit'|trans }}</a>

    {{ include('sklad/_delete_form.html.twig') }}
{% endblock %}
